
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <p>
            Я тот еще киноман
        </p>

        <ul>
            @foreach (var film in Model)
            {
                <li>
                    <div>
                        @film.name
                        @film.author
                        @film.description
                    </div>
                </li>
            }
        </ul>

        <p> @Html.ActionLink("На главную", "Index", "Home")</p>
    </div>
</body>
</html>
